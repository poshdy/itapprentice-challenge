{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "noImplicitAny": false,
    "strict": false,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "lib": ["esnext"],
    "esModuleInterop": true
  },
  "include": ["src/**/*", "src/pub"]
}
